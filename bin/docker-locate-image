#!/bin/bash

lastArg="${!#}"

readarray -t ids < <(docker-i --quiet "$lastArg")
case ${#ids[@]} in
    0)	printf >&2 'Warning: Could not locate image: %s' "$lastArg"; id="$lastArg";;
    1)	id="${ids[0]}";;
    *)	printf >&2 'ERROR: Multiple images found for %s: %s\n' "$lastArg" "$(joinBy ', ' "${ids[@]}")"; exit 1;;
esac

printf '%s\n' "$id"
